<Window x:Class="WPFBookManager.AddPublisherWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFBookManager"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        mc:Ignorable="d"
        Title="AddPublisherWindow" Height="140" Width="250" MinHeight="140" MinWidth="250">
    <Grid>
        <StackPanel Margin="5">
            <TextBlock Margin="0, 3, 0, 0">Publisher's Name:</TextBlock>
            <TextBox Margin="0, 10, 0, 0" />
            <Button Margin="0, 10, 0, 0">
                <Button.Content>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <fa:ImageAwesome Icon="Plus" Width="14" />
                        <TextBlock FontSize="14" Margin="5, 0, 0, 0">Add</TextBlock>
                    </StackPanel>
                </Button.Content>
            </Button>
        </StackPanel>
    </Grid>
</Window>
